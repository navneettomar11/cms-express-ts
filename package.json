{
  "name": "cms",
  "version": "1.0.0",
  "description": "Content Management System",
  "main": "./dist/server.js",
  "scripts": {
    "build": "webpack --config webpack.config.js",
    "start": "NODE_ENV=development npm run build && node ./dist/server.js",
    "test": "NODE_ENV=test mocha --timeout 5000 --reporter spec --compilers ts:ts-node/register 'test/**/*.spec.ts'",
    "test-with-coverage": "NODE_ENV=test nyc mocha --timeout 5000 --reporter spec --compilers ts:ts-node/register 'test/**/*.spec.ts'"
  },
  "keywords": [
    "Content",
    "Management",
    "System"
  ],
  "author": "Navneet Singh",
  "license": "ISC",
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^3.4.34",
    "@types/chai-http": "0.0.29",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/mocha": "^2.2.32",
    "@types/node": "^10.9.4",
    "@types/nodemailer": "^4.6.5",
    "@types/passport": "^0.4.6",
    "@types/passport-http": "^0.3.6",
    "@types/sinon": "^5.0.2",
    "chai": "^3.5.0",
    "chai-http": "^3.0.0",
    "mocha": "^3.1.2",
    "nyc": "^13.0.1",
    "sinon": "^6.3.3",
    "sql.js": "^0.5.0",
    "ts-loader": "^5.0.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.0.3",
    "webpack": "^4.17.1",
    "webpack-cli": "^3.1.0"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "class-validator": "^0.9.1",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "md5-typescript": "^1.0.5",
    "mysql2": "^1.6.1",
    "nodemailer": "^4.6.8",
    "passport": "^0.4.0",
    "passport-http": "^0.3.0",
    "reflect-metadata": "^0.1.12",
    "typeorm": "^0.2.7"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true  
  }
}
